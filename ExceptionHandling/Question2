public class MultiExceptionExample {

    public static void main(String[] args) {

        int[] numbers = {10, 20, 30};

        try {
            // Risky operation 1: invalid array index
            System.out.println("Value: " + numbers[5]);

            // Risky operation 2: division by zero
            int result = 50 / 0;
            System.out.println("Result: " + result);

        } catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Error: Invalid array index!");
        } catch (ArithmeticException e) {
            System.out.println("Error: Cannot divide by zero!");
        } finally {
            System.out.println("Finally block executed: Cleaning up resources.");
        }

        System.out.println("Program finished successfully.");
    }
}
